#include <stdio.h>
#include <string.h>

char letras(char x[50]){
    
 int tamanho= 0;
 int i=0;
            while(x[i]!= '\0'){
                
                 i++;
                 tamanho++;   }
                 
   return tamanho; }

int main(){
char nome[50];
int tam;

         printf("digite seu nome\n");
           fgets(nome,50,stdin);
           
          letras(nome);

tam= letras(nome);
    
        printf("esse nome tem %d letras", tam-1);        
     
    return 0;
}
