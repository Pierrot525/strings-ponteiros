#include <stdio.h>
#include <string.h>

int main(){
char str[50];
char novastr[50];

       printf("digite sua frase\n");
       gets(str);
       
      for(int i=0; i<strlen(str) ;i++){
          
          novastr[i]= str[i]+1;
      }
          
        printf("sua frase agora e: \n %s", novastr);

    return 0;
}
