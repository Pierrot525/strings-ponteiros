#include <stdio.h>
#include <string.h>

int main(){
char str[100],novastr[100];


       printf("digite seu texto\n");
       gets(str);
       
      for(int i=0; i < strlen(str);i++){
        
       novastr[i]= str[i]+3;
      }

      printf("sua nova string e: \n %s",novastr);

    return 0; }
