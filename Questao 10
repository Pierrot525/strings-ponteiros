#include <stdio.h>
#include <string.h>

int main(){
char str[50];
int vog=0;

       printf("digite sua frase\n");
       gets(str);
       
      for(int i=0; i<strlen(str) ;i++){
          
          switch(str[i]){
              
              case 'a' : str[i]= 'Y'; vog++; break;
              case 'A' : str[i]= 'Y'; vog++; break;
              case 'e' : str[i]= 'Y'; vog++; break;
              case 'E' : str[i]= 'Y'; vog++; break;
              case 'i' : str[i]= 'Y'; vog++; break;
              case 'I' : str[i]= 'Y'; vog++; break;
              case 'o' : str[i]= 'Y'; vog++; break;
              case 'O' : str[i]= 'Y'; vog++; break;
              case 'u' : str[i]= 'Y'; vog++; break;
              case 'U' : str[i]= 'Y'; vog++; break;
              
          }
      }
      
       printf("sua frase sem vogais e:\n %s \n", str);
       printf("seu numero de vogais e:\n %d \n", vog);

    return 0;
}
